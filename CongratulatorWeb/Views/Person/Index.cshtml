@model List<CongratulatorWeb.Entities.Person>
@{
    ViewData["Title"] = "All birthdays";
    var currentSort = ViewBag.SortBy as string ?? "name";
}

<h1>All birthdays</h1>

<div class="form-group mb-2 d-flex gap-2">
    <a asp-action="Create" class="btn btn-primary">Create new person</a>
    <form asp-action="Index" method="get" class="d-inline">
        <label for="sortBy" class="form-label d-inline me-2">Sort by:</label>
        <select name="sortBy" id="sortBy" class="form-select d-inline" style="width: auto;" onchange="this.form.submit()">
            <option value="name" selected="@(currentSort == "name")">Name</option>
            <option value="year" selected="@(currentSort == "year")">Year</option>
            <option value="birthdate" selected="@(currentSort == "birthdate")">Birthdate</option>
            <option value="relationship" selected="@(currentSort == "relationship")">Relationship</option>
        </select>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birthday</th>
            <th>Relationship</th>
            <th>Age</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.BirthDate.ToString("dd.MM.yyyy")</td>
                <td>@item.Relationship.ToString();</td>
                <td>@item.Age</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhotoPath))
                    {
                        <img src="@item.PhotoPath" alt="@item.Name" width="50" />
                    }
                    else
                    {
                        <span>No photo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a> |
                    <a asp-action="EditPhoto" asp-route-id="@item.Id" class="btn btn-light">Edit photo</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
