@model CongratulatorWeb.Entities.Person
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this person?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Birthday</dt>
        <dd class="col-sm-10">@Model.BirthDate.ToString("dd.MM.yyyy")</dd>
        <dt class="col-sm-2">Relationship</dt>
        <dt class="col-sm-10">@Model.Relationship.ToString()</dt>
        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>