@model List<CongratulatorWeb.Entities.Person>
@{
    ViewData["Title"] = "Todays and upcoming birthdays";
    var currentSort = ViewBag.SortBy as string ?? "birthdate";
}

<h1>Todays and upcoming birthdays</h1>

<div class="form-group mb-2 d-flex gap-2">
    <a asp-controller="Person" asp-action="Index" class="btn btn-primary">All birthdays</a>
    <form asp-action="Index" method="get" class="d-inline">
        <label for="sortBy" class="form-label d-inline me-2">Sort by:</label>
        <select name="sortBy" id="sortBy" class="form-select d-inline" style="width: auto;" onchange="this.form.submit()">
            <option value="name" selected="@(currentSort == "name")">Name</option>
            <option value="year" selected="@(currentSort == "year")">Year</option>
            <option value="birthdate" selected="@(currentSort == "birthdate")">Birthdate</option>
            <option value="relationship" selected="@(currentSort == "relationship")">Relationship</option>
        </select>
    </form>
</div>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Birthday</th>
                <th>Relationship</th>
                <th>Age</th>
                <th>Photo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.BirthDate.ToString("dd.MM.yyyy")</td>
                    <td>@person.Relationship.ToString()</td>
                    <td>@person.Age</td>
                    <td>
                        @if (!string.IsNullOrEmpty(person.PhotoPath))
                        {
                            <img src="@person.PhotoPath" alt="@person.Name" width="50" />
                        }
                        else
                        {
                            <span>No photo</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Person" asp-action="Edit" asp-route-id="@person.Id" class="btn btn-light">Edit</a> |
                        <a asp-controller="Person" asp-action="Delete" asp-route-id="@person.Id" class="btn btn-light">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There is no upcoming birthdays.</p>
}